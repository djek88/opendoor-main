html(ng-app="opendoorApp")
	head
		title Church Finder
		meta(content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" name="viewport")
		base(href="/")
		link(href='http://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700', rel='stylesheet')
		link(href='assets/color_admin/plugins/jquery-ui/themes/base/minified/jquery-ui.min.css', rel='stylesheet')
		link(href='assets/color_admin/plugins/bootstrap/css/bootstrap.min.css', rel='stylesheet')
		link(href='assets/color_admin/plugins/font-awesome/css/font-awesome.min.css', rel='stylesheet')
		link(href='assets/color_admin/css/animate.min.css', rel='stylesheet')
		link(href='assets/color_admin/css/style.min.css', rel='stylesheet')
		link(href='assets/color_admin/css/style-responsive.min.css', rel='stylesheet')
		link#theme(href='assets/color_admin/css/theme/default.css', rel='stylesheet')

		link(href='assets/css/style.css', rel='stylesheet')

		script(src="bower_components/jquery/dist/jquery.min.js")
		script(src="bower_components/bootstrap/dist/js/bootstrap.min.js")
		script(src="bower_components/angular/angular.js")
		script(src="bower_components/angular-route/angular-route.js")
		script(src="bower_components/angular-cookies/angular-cookies.js")
		script(src='https://maps.googleapis.com/maps/api/js?key=#{apiKeys.googleMaps}')

		script(src="assets/js/locationpicker.js")
		script(src="assets/js/app.js")
		script(src="assets/js/controllers.js")
	block body
		body
			#header.header.navbar.navbar-default.navbar-fixed-top(ng-controller="ToolbarCtrl")
				.container
					.navbar-header
						button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#header-navbar')
							span.icon-bar
							span.icon-bar
							span.icon-bar
						a.navbar-brand(href='/')
							span.brand-logo
							span.brand-text
								| OpenDoor
					#header-navbar.collapse.navbar-collapse
						ul.nav.navbar-nav.navbar-right
							li.dropdown
								a(href='/')
									| HOME
							li(ng-show="$isLoggedIn")
								a(href='/places/add') ADD A PLACE
							li(ng-show="$isLoggedIn")
								a.pointer(data-toggle='dropdown' ng-disabled)
									| MY PROFILE
									b.caret
								ul.dropdown-menu
									li
										a(href='/profile/edit') Edit profile
									li
										a(target="_self" href='/logout') Log out
							li(ng-hide="$isLoggedIn")
								a(href='/login') LOG IN
							li(ng-hide="$isLoggedIn")
								a(href='/register') REGISTER
			#wrap.ng-view
			footer#footer.my-footer(ng-controller="FooterCtrl")
				| Â© 2016 OpenDoor -
				a.pointer(ng-click="$leaveFeedback($event)", ng-disabled="$isFeedbackPage")  Leave feedback