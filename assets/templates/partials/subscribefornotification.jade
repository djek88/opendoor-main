#content.content
	.container.bg-white.p-t-10
		h3.m-b-15 Subscribe for notification
		form.form-horizontal(method="POST", action="/subscribefornotification", novalidate name="form")
			.form-group(ng-class="{'has-error': (form.$submitted || form.name.$touched) && form.name.$error.required}")
				label.col-md-3.control-label Your Name
				.col-md-9
					input.form-control(type="text", name="name", ng-model="name", required)
			.form-group(ng-class="{'has-error': (form.$submitted || form.email.$touched) && (form.email.$error.required || form.email.$error.email)}")
				label.col-md-3.control-label Your Email address
				.col-md-9
					input.form-control(type="email", name="email", ng-model="email", required)
			.form-group(ng-class="{'has-error': (form.$submitted || form.religion.$touched) && form.religion.$error.required}")
				label.col-md-3.control-label Religion
				.col-md-9
					select.form-control(name="religion", ng-model="religion")
						option(value="{{$name}}", ng-repeat="$name in $root.$religions") {{$name}}
			input.hidden(name="lat" ng-value="lat")
			input.hidden(name="lng" ng-value="lng")
			.form-group
				label.col-md-3.control-label
				.col-md-9
					input.btn.btn-sm.btn-primary(type="button", ng-click="submitForm()", value="Subscribe")