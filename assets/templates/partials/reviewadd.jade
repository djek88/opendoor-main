#content.content
	.container.bg-white.p-t-10
		h3.text-center.m-b-30 Add review for {{$place.name}}
		form.form-horizontal(method="POST", ng-action="/places/review/{{3}}", novalidate name="form")
			.form-group.rating-group(ng-class="{'has-error': (form.$submitted || form.rating.$touched) && form.rating.$error.required}")
				label.col-md-3.control-label Radio Button
				.col-md-9
					.radio
						label
							input(type="radio", name="rating", ng-model="rating", value="1", required)
							.fa.fa-star
							.fa.fa-star-o
							.fa.fa-star-o
							.fa.fa-star-o
							.fa.fa-star-o
					.radio
						label
							input(type="radio", name="rating", ng-model="rating", value="2", required)
							.fa.fa-star
							.fa.fa-star
							.fa.fa-star-o
							.fa.fa-star-o
							.fa.fa-star-o
					.radio
						label
							input(type="radio", name="rating", ng-model="rating", value="3", required)
							.fa.fa-star
							.fa.fa-star
							.fa.fa-star
							.fa.fa-star-o
							.fa.fa-star-o
					.radio
						label
							input(type="radio", name="rating", ng-model="rating", value="4", required)
							.fa.fa-star
							.fa.fa-star
							.fa.fa-star
							.fa.fa-star
							.fa.fa-star-o
					.radio
						label
							input(type="radio", name="rating", ng-model="rating", value="5", required)
							.fa.fa-star
							.fa.fa-star
							.fa.fa-star
							.fa.fa-star
							.fa.fa-star
			.form-group(ng-class="{'has-error': (form.$submitted || form.note.$touched) && form.note.$error.required}")
				label.col-md-3.control-label Note
				.col-md-9
					textarea.form-control(placeholder='Write your feedback', rows='5', name="note", ng-model="note", required)
			input.hidden(name="target" ng-value="$targetPage")
			.form-group
				label.col-md-3.control-label
				.col-md-9
					input.btn.btn-sm.btn-primary(type="button", ng-click="submitForm()", value="Send feedback")