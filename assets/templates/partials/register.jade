#page-container.page-container.page-sidebar-fixed.page-header-fixed.fade.in.p-t-0
	.ng-scope(ui-view='')
		.ng-scope(ui-view='')
			.ng-scope(ui-view='')
				.login.bg-black.animated.fadeInDown
					.login-header
						.brand
							span.logo
							|  The Open Door Project
							small A place of worship near you
					.login-content
						.alert.fade.in(ng-show="alertMessage", ng-class="'alert-' + alertType")
							span.close(data-dismiss='alert') Ã—
							i.fa.fa-check.fa-2x.pull-left
							p {{ alertMessage }}
						form.margin-bottom-0(, method="POST", action="/register", novalidate, name="form")
							.form-group.m-b-20(ng-class="{'has-error': (form.$submitted || form.name.$touched) && form.name.$error.required}")
								div(ng-show="form.$submitted || form.name.$touched")
									label.control-label(ng-show="form.name.$error.required") Name is required.
								input.form-control.input-lg(placeholder="Name", name="name", ng-model="name", required)
							.form-group.m-b-20(ng-class="{'has-error': (form.$submitted || form.email.$touched) && (form.email.$error.required || form.email.error.email)}")
								div(ng-show="form.$submitted || form.email.$touched")
									label.control-label(ng-show="form.email.$error.required") Email is required.
									label.control-label(ng-show="form.email.error.email") This is not a valid email.
								input.form-control.input-lg(placeholder="Email Address", type="email", name="email", ng-model="email", required)
							.form-group.m-b-20(ng-class="{'has-error': (form.$submitted || form.password.$touched) && form.password.$error.required}")
								div(ng-show="form.$submitted || form.password.$touched")
									label.control-label(ng-show="form.password.$error.required") Password is required.
								input.form-control.input-lg(placeholder="Password", type="password", name="password", ng-model="password", required)
							.login-buttons
								input.btn.btn-success.btn-block.btn-lg(type="button", value="Register", ng-click="submitForm()")