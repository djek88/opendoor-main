#content.content
	.container.bg-white.p-t-10
		h3.text-center.m-b-30 Leave feedback
		form.form-horizontal(method="POST", action="/feedback", novalidate name="form")
			.form-group(ng-class="{'has-error': (form.$submitted || form.name.$touched) && form.name.$error.required}")
				label.col-md-3.control-label Name
				.col-md-9
					input.form-control(type="text", name="name", ng-model="name", required)
			.form-group(ng-class="{'has-error': (form.$submitted || form.email.$touched) && (form.email.$error.required || form.email.$error.email)}")
				label.col-md-3.control-label Email address
				.col-md-9
					input.form-control(type="email", name="email", ng-model="email", required)
			.form-group(ng-class="{'has-error': (form.$submitted || form.note.$touched) && form.note.$error.required}")
				label.col-md-3.control-label Note
				.col-md-9
					textarea.form-control(placeholder='Write your feedback', rows='5', name="note", ng-model="note", required)

			.form-group
				label.col-md-3.control-label
				.col-md-9
					input.btn.btn-sm.btn-primary(type="button", ng-click="submitForm()", value="Send feedback")