#content.content
	.container.bg-white.p-t-10
		h3.text-center.m-b-30 Add new place
		form.form-horizontal(method="POST", action="/places/add", novalidate name="form", enctype="multipart/form-data")
			.form-group(ng-class="{'has-error': (form.$submitted || form.name.$touched) && form.name.$error.required}")
				label.col-md-3.control-label Place name
				.col-md-9
					input.form-control(type="text", name="name", ng-model="name", required)
			.form-group(ng-class="{'has-error': (form.$submitted || form.faith.$touched) && form.faith.$error.required}")
				label.col-md-3.control-label Faith
				.col-md-9
					select.form-control(name="faith", ng-model="faith", required)
						option(value="",selected, disabled)
						option(value="{{$name}}", ng-repeat="$name in $faiths") {{$name}}
			.form-group(ng-class="{'has-error': (form.$submitted || form.pastorName.$touched) && form.pastorName.$error.required}")
				label.col-md-3.control-label Pastor name
				.col-md-9
					input.form-control(type="text", name="pastorName", ng-model="pastorName")
			.form-group(ng-class="{'has-error': (form.$submitted || form.phone.$touched) && form.phone.$error.required}")
				label.col-md-3.control-label Phone number
				.col-md-9
					input.form-control(type="text", name="phone", ng-model="phone")
			.form-group(ng-class="{'has-error': (form.$submitted || form.postalCode.$touched) && form.postalCode.$error.required}")
				label.col-md-3.control-label Postal code
				.col-md-9
					input.form-control(type="text", name="postalCode", ng-model="postalCode")
			.form-group(ng-class="{'has-error': (form.$submitted || form.address.$touched) && form.address.$error.valid}")
				label.col-md-3.control-label Location
				.col-md-9
					.input-group.location-picker
						input.form-control(name="address", ng-location, ng-model="address")
						input.hidden(name="location")
						.input-group-btn
							button.btn.btn-inverse Detect location
			.form-group(ng-class="{'has-error': (form.$submitted || form.email.$touched) && form.email.$error.required}")
				label.col-md-3.control-label Email address
				.col-md-9
					input.form-control(type="text", name="email", ng-model="email", required)
			.form-group(ng-class="{'has-error': (form.$submitted || form.photo.$touched) && form.photo.$error.required}")
				label.col-md-3.control-label Photo
				.col-md-9
					input.form-control(type="file", name="photo", ng-model="photo")
			.form-group
				label.col-md-3.control-label
				.col-md-9
					input.btn.btn-sm.btn-primary(type="button", ng-click="submitForm()", value="Add place")