#content.content
	.container
		.row
			.col-lg-12.m-t-40
				h4.text-center(ng-show='message') {{message}}
				div(ng-show="countries")
					div(ng-show="countries.length")
						.table-wrap.bg-white
							table#search-table.table
								thead
									tr
										th Country
										th
								tbody
									tr.place-link(ng-repeat="country in countries", ng-mousedown="openCountry($event, country)")
										td {{country}}
										td.text-right
											a(ng-href="/places/{{getLink(country)}}")
												i.fa.fa-chevron-right