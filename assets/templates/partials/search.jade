#content.content
	.container
		.row
			.col-12
				form.form-inline(name="form")
					//.form-group
					//	//label.control-label Location
					//	.input-group.location-picker
					//		input.form-control(type='text' placeholder="Location")
					//		.input-group-btn
					//			ul.dropdown-menu.pull-right
					//			button.btn.btn-inverse(type='button') Detect location
					.form-group(ng-class="{'has-error': (form.$submitted || form.address.$touched) && form.address.$error.valid}")
						.input-group.location-picker
							input.form-control(name="address", ng-location, ng-model="location", placeholder="Location")
							input.hidden(name="location")
							.input-group-btn
								button.btn.btn-inverse Detect my location
					span.inline-spacer
					.form-group(ng-class="{'has-error': (form.$submitted || form.religions.$touched) && form.religions.$error.required}")
						select.form-control(name="religions", ng-model="religions", required)
							option(value="*", selected) All religions
							option(value="{{$name}}", ng-repeat="$name in $religionsList") {{$name}}
					button.btn.btn-md.btn-primary(type='submit', ng-click="$searchPlaces()") Search
					.clearfix
			.col-12(ng-hide='$message.length')
				#results-map
			.col-12.m-t-40
				h4.search-placeholder.text-center(ng-show='$message.length') {{$message}}
				.table-wrap.bg-white(ng-show='$places.length')
					table#search-table.table
						thead
							tr
								th Name
								th.hidden-sm-down Faith
								th Distance
								th
						tbody
							tr.place-link(ng-repeat="$place in $places", ng-click="$openPlace($event, $place)", ng-mouseover="$mouseOver($index)", ng-mouseout="$mouseOut($index)")
								td {{$place.name}}
								td.hidden-sm-down {{$place.religion}}
								td {{$place.distance}}m
								td.text-right
									i.fa.fa-chevron-right