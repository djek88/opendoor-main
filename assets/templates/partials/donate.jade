#content.content
	.container.bg-white.p-t-10
		div
			.col-lg-3
			.col-lg-9
				h3.m-t-30 Show your support for this place
				h5 Each month costs 10 (all money used to promote this Place of Worship)
			form.form-horizontal(method="POST", novalidate, name="form")
				.form-group(ng-class="{'has-error': (form.$submitted || form.name.$touched) && form.name.$error.required}")
					label.col-md-3.control-label Name of company or person
					.col-md-9
						input.form-control(name="name", ng-model="name", required)
				.form-group(ng-class="{'has-error': (form.$submitted || form.url.$touched) && form.url.$error.required}")
					label.col-md-3.control-label Link to website
					.col-md-9
						input.form-control(name="url", ng-model="url")
				.form-group(ng-class="{'has-error': (form.$submitted || form.url.$touched) && form.url.$error.required}")
					label.col-md-3.control-label Link to website
					.col-md-9
						input.form-control(name="sum", ng-model="sum", type="range", min="10", max="600", step="10")
						input.form-control(type="hidden", name="token", ng-model="token")
						span Donate sum: {{sum}}
				.form-group
					label.col-md-3.control-label
					.col-md-9
						input.btn.btn-sm.btn-primary(type="button", ng-click="submitForm()", value="Add review")