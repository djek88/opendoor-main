#content.content
	.container.bg-white.p-t-10
		div
			.col-lg-3
			.col-lg-9
				h3.m-t-30 Show your support for {{place.name}}
				h5 Become a sponsor of this page by donating $10 per month. Your name or company name will be listed as a sponsor with a link to your website.
			form.form-horizontal(method="POST", novalidate, name="form")
				.form-group(ng-class="{'has-error': (form.$submitted || form.name.$touched) && form.name.$error.required}")
					label.col-md-3.control-label Text to show in the sponsor list
					.col-md-9
						input.form-control(name="name", ng-model="name", required)
				.form-group(ng-class="{'has-error': (form.$submitted || form.url.$touched) && form.url.$error.required}")
					label.col-md-3.control-label Website link
					.col-md-9
						input.form-control(name="url", ng-model="url")
				.form-group(ng-class="{'has-error': (form.$submitted || form.url.$touched) && form.url.$error.required}")
					label.col-md-3.control-label Number of months to be a sponsor
					.col-md-9
						input.form-control(name="months", ng-model="months", type="range", min="1", max="60", step="1")
						input.form-control(type="hidden", name="token", ng-model="token")
						span {{months}}
				.form-group
					label.col-md-3.control-label
					.col-md-9
						input.btn.btn-sm.btn-primary(type="button", ng-click="submitForm()", value="Donate")