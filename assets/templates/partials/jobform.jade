#content.content
	.container.bg-white.p-t-10
		h3.text-center.m-b-30(ng-hide="$edit") Add job
		h3.text-center.m-b-30(ng-show="$edit") Edit job
		form.form-horizontal(method="POST", novalidate, name="form")
			.form-group(ng-class="{'has-error': (form.$submitted || form.title.$touched) && form.title.$error.required}")
				label.col-md-3.control-label Job title
				.col-md-9
					input.form-control(type="text", name="title", ng-model="$job.title", required)
			.form-group(ng-class="{'has-error': (form.$submitted || form.type.$touched) && form.type.$error.required}")
				label.col-md-3.control-label Type
				.col-md-9
					select.form-control(name="type", ng-model="$job.type", required)
						option(value="",selected, disabled)
						option(value="Permanent") Permanent
						option(value="Full time") Full time
			.form-group(ng-class="{'has-error': (form.$submitted || form.description.$touched) && form.description.$error.required}")
				label.col-md-3.control-label Description
				.col-md-9
					textarea.form-control(name="description", ng-model="$job.description", required)
			.form-group(ng-class="{'has-error': (form.$submitted || form.email.$touched) && (form.email.$error.required || form.email.$error.email)}")
				label.col-md-3.control-label Contact email
				.col-md-9
					input.form-control(type="email", name="email", ng-model="$job.email", required)
					label.control-label(ng-show="form.email.$error.email") This is not a valid email.
			input(type="hidden", name="place", ng-value="$job.place")
			.form-group
				label.col-md-3.control-label
				.col-md-9
					input.btn.btn-sm.btn-primary(type="button", ng-click="submitForm()", value="Add job", ng-hide="$edit")
					input.btn.btn-sm.btn-primary(type="button", ng-click="submitForm()", value="Save changes", ng-show="$edit")