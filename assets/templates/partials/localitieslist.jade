#content.content
	.container
		.row
			.col-lg-12.m-t-40
				h4.text-center(ng-show='message') {{message}}
				h1.localsheadings Places of Worship in {{selectedCountry}}
				div(ng-show="localities")
					div(ng-show="localities.length")
						.table-wrap.bg-white
							table#search-table.table
								thead
									tr
										th City
										th
								tbody
									tr.place-link(ng-repeat="locality in localities", ng-mousedown="openLocality($event, locality)")
										td {{locality}}
										td.text-right
											a(ng-href="/places/{{getLink(locality)}}")
												i.fa.fa-chevron-right